<div id="templatemo_wrapper">
<h1>Pagina de resultados del dia</h1>

<table class="rwd-table">
  <tr>
    <th>#</th>
    <th>Hora</th>
    <th>Moneda</th>
    <th>Imagen</th>

  </tr>

<% @arreglo_de_resultados.each_with_index  do |iterador,i|%>

	<tr>
    <td data-th="#"><%=i+1%></td>
    <td data-th="Hora"><%=iterador.fecha%></td>
    <td data-th="Moneda"><%=iterador.coin.nombre%></td>
    <td data-th="Imagen"><%=image_tag "#{iterador.coin.nombre}.png" , :class => "imagenCrypto2"%></td>
  </tr>

<%end%>	
</table>
</div>