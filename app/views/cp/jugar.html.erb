<h1>pagina de jugar</h1>


<h2> Apuesta </h2>
<%= form_tag({:controller => "cp", :action => "jugar"}, :method => "post") do %>
   <%= label_tag "monto", "Monto" %>
   <br />
   <%= number_field_tag  "monto", "", :required => "required", min: 0.0000000001, step: :any %>
   <br />
   <%= label_tag "moneda", "Moneda" %>
   <br />
   <%= text_field_tag "moneda", "", :required => "required"%>
   <br />
   <%= submit_tag "Apostar" %>
<% end %>

<% if request.post?%>
   <% if @respuesta %>
      <p> Gracias por publicar tu apuesta </p>

   <% else%>
      <p>Tienes menos saldo de lo que quieres apostar!</p> 
   <% end %>
<%end%>
