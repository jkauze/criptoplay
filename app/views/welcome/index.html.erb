              <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <!-- Carousel items -->
            <div class="carousel-inner">
              <div class="item active">
              	<%= image_tag "imagenportada.jpg", :alt => "First Slide"%>
                <div class="carousel-caption">
                  <div class="textoSlider">
                    <h3>Juega con Nosotros</h3>
                  <p>Apuesta diariamente a una de las 36 CriptoMonedas e intenta ganar</p>
                  </div>
                  
                </div>
              </div>
              <div class="item">
              	<%= image_tag "venezuela-y-el-mundo.jpg", :alt => "Second Slide"%>
                <div class="carousel-caption">
